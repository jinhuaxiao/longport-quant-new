# ============================================================
# 时区轮动 + 凯利公式配置示例
# ============================================================
# 将此配置添加到您的 .env 文件中

# ============================================================
# 凯利公式仓位管理
# ============================================================

# 启用凯利公式（默认启用）
KELLY_ENABLED=true

# 凯利公式保守系数（0.5 = 50% Kelly，推荐范围 0.25-0.5）
# - 0.25 = 非常保守，适合风险厌恶型
# - 0.5 = 中等保守，平衡收益和风险（推荐）
# - 1.0 = 完整凯利，波动较大，不推荐
KELLY_FRACTION=0.5

# 最大单笔仓位比例（安全上限）
KELLY_MAX_POSITION=0.25

# 最小胜率要求（低于此值不使用凯利公式）
KELLY_MIN_WIN_RATE=0.55

# 最少交易次数要求（历史数据不足时使用回退策略）
KELLY_MIN_TRADES=10

# 统计回溯天数（用于计算胜率和盈亏比）
KELLY_LOOKBACK_DAYS=30

# ============================================================
# 时区轮动资金管理
# ============================================================

# 启用时区轮动（默认启用）
TIMEZONE_ROTATION_ENABLED=true

# 弱势持仓评分阈值（低于此值视为弱势，可轮换）
# 评分越低越应该卖出
TIMEZONE_WEAK_THRESHOLD=40

# 单次最大轮换比例（防止一次性卖出过多持仓）
TIMEZONE_MAX_ROTATION=0.30

# 亏损超过此值优先轮换（-0.10 = -10%）
TIMEZONE_MIN_PROFIT_ROTATION=-0.10

# 强势持仓保护阈值（高于此值不轮换，保留优质持仓）
TIMEZONE_STRONG_THRESHOLD=70

# 最短持有时间（小时，避免频繁交易）
TIMEZONE_MIN_HOLDING_HOURS=0.5

# ============================================================
# 配置等级推荐
# ============================================================

# 🔰 新手配置（保守）:
# KELLY_FRACTION=0.25
# KELLY_MAX_POSITION=0.15
# TIMEZONE_ROTATION_ENABLED=false  # 先观察

# 📊 标准配置（推荐）:
# KELLY_FRACTION=0.5
# KELLY_MAX_POSITION=0.25
# TIMEZONE_ROTATION_ENABLED=true
# TIMEZONE_WEAK_THRESHOLD=40
# TIMEZONE_MAX_ROTATION=0.30

# 🚀 激进配置（经验丰富）:
# KELLY_FRACTION=0.75
# KELLY_MAX_POSITION=0.30
# TIMEZONE_ROTATION_ENABLED=true
# TIMEZONE_WEAK_THRESHOLD=50
# TIMEZONE_MAX_ROTATION=0.40
